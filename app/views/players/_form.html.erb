<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-8">
      <% if @player.errors.any? %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <h4 class="alert-heading">The following errors prevented the player from being saved</h4>
          <ul>
            <% @player.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <%= form_with(model: @player, class: "shadow p-3 mb-3 bg-light rounded", local: true) do |f| %>
        <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter Player Name" %>
        </div>

        <div class="mb-3">
          <%= f.label :team_id, class: 'form-label' %>
          <%= f.collection_select :team_id, Team.all, :id, :name, { include_blank: "Select Team" }, { class: 'form-control shadow rounded' } %>
        </div>

        <div class="mb-3">
          <%= f.label :age, class: 'form-label' %>
          <%= f.number_field :age, class: 'form-control shadow rounded' %>
        </div>

        <div class="mb-3">
          <%= f.label :position, class: "form-label" %>
          <%= f.text_field :position, class: "form-control shadow rounded" %>
        </div>

        <div class="mb-3">
          <%= f.label :role, class: 'form-label' %>
          <%= f.select :role, options_for_select(Player.roles.keys.map { |role| [role.humanize, role] }), {}, class: 'form-control shadow rounded' %>
        </div>

        <div class="mb-3">
          <%= f.check_box :is_captain, class: 'form-check-input' %>
          <%= f.label :is_captain, class: 'form-check-label' %>
        </div>

        <div class="mb-3">
          <%= f.check_box :is_active, class: 'form-check-input' %>
          <%= f.label :is_active, class: 'form-check-label' %>
        </div>

        <div class="mb-3">
          <%= f.label :description, class: 'form-label' %>
          <%= f.text_area :description, class: 'form-control shadow rounded' %>
        </div>

        <div class="mb-3">
          <%= f.submit 'Save Player', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
